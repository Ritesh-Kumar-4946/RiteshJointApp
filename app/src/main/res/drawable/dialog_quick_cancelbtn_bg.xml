<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#f4949a" />
            <gradient android:angle="-90" android:endColor="#f4949a" android:startColor="#f4949a" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#f4949a" />
            <solid android:color="#f4949a" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#5e7974" />
            <gradient android:angle="-90" android:endColor="#ff5f69" android:startColor="#ff5f69" />
        </shape>
    </item>
</selector>