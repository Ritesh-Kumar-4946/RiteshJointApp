<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <!--Main Relative Layout (Start)-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <!--Relative layout for  textview of sign in (Start)-->
            <RelativeLayout
                android:id="@+id/rl_twSignin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_logo_joint" />
            </RelativeLayout>
            <!--Relative layout for  textview of sign in (End)-->

            <!--Relative layout for progressbar (Start)-->
            <!--<RelativeLayout
                android:id="@+id/rl_logprogressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/rl_twSignin">

                <ProgressBar
                android:id="@+id/loginprogressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:indeterminate="false"
                android:max="100"
                android:progressDrawable="@drawable/circular_progress_bar" />

            </RelativeLayout>-->
            <!--Relative layout for progressbar (End)-->

            <!--Relative layout for textview of username and password (Start)-->
            <RelativeLayout
                android:id="@+id/rl_edUser_edPass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_twSignin"
                android:layout_marginTop="80dp">

                <!--Edittext for User email (Start)-->
                <EditText
                    android:id="@+id/et_suseremail"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10sp"
                    android:singleLine="true"
                    android:textColor="#8e8c8c"
                    android:textColorHint="#8e8c8c" />
                <!--Edittext for User email (End)-->

                <!--Edittext for Password (Start)-->
                <EditText
                    android:id="@+id/et_setpassword"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/et_suseremail"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_rectangle_white"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10sp"
                    android:singleLine="true"
                    android:textColor="#8e8c8c"
                    android:textColorHint="#8e8c8c" />
                <!--Edittext for Password (End)-->

            </RelativeLayout>
            <!--Relative layout for textview of username and password (End)-->

            <!-- Relative layout for Button of login (Start)-->
            <RelativeLayout
                android:id="@+id/rl_btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_edUser_edPass"
                android:layout_marginTop="50dp">

                <!-- login button (Start)-->
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/rounded_rectangle_blue"
                    android:elevation="20dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />
                <!-- login button (End)-->

                <!--signup Here textView (Start)-->
                <TextView
                    android:id="@+id/tv_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/btn_login"
                    android:layout_alignStart="@+id/btn_login"
                    android:layout_below="@+id/btn_login"
                    android:layout_marginTop="20dp"
                    android:text="Signup Here"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
                <!--signup Here textView (End)-->

                <!--Forgot password Here textView (Start)-->
                <TextView
                    android:id="@+id/tv_forgetpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/btn_login"
                    android:layout_alignRight="@+id/btn_login"
                    android:layout_below="@+id/btn_login"
                    android:layout_marginTop="20dp"
                    android:text="Forgot Password"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
                <!--Forgot password Here textView (End)-->
            </RelativeLayout>
            <!-- Relative layout for Button of login (End)-->

            <!--Relative Layout for term and condition (Start)-->
            <RelativeLayout
                android:id="@+id/rl_termcondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_btn_login">

                <TextView
                    android:id="@+id/tv_termcondition"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Terms and Condition Policy"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

            </RelativeLayout>
            <!--Relative Layout for term and condition (Start)-->

            <RelativeLayout
                android:id="@+id/rl_login_progress"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:padding="3dp">

                <fr.castorflex.android.circularprogressbar.CircularProgressBar
                    android:id="@+id/progressbar_circular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="true"
                    android:indeterminateOnly="false"
                    app:cpb_colors="@array/gplus_colors" />

            </RelativeLayout>


        </RelativeLayout>
        <!--Main Relative Layout (End)-->

    </ScrollView>

</RelativeLayout>